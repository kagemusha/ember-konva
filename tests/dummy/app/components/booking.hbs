<@layer.Group
  @draggable={{true}}
  @x={{200}}
  @y={{250}}
  as |group|
>
  <group.Rect
    @x={{0}}
    @height={{40}}
    @width={{380}}
    @fill="#020202"
    @cornerRadius={{4}}
  />

  <group.Image
    @x={{4}}
    @y={{4}}
    @height={{32}}
    @width={{32}}
    @image={{this.image}}
  />

  <group.Text
    @x={{44}}
    @height={{40}}
    @fill="white"
    @verticalAlign="middle"
    @fontFamily="monospace"
    @text="Frontend development"
    @wrap="none"
    @ellipsis={{true}}
  />
</@layer.Group>
