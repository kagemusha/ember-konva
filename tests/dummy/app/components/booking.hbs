<@layer.Group
  @draggable={{true}}
  @x={{200}}
  @y={{250}}
  as |group|
>

  <group.Image
    @height={{20}}
    @width={{20}}
    @image={{this.image}}
  />

  <group.Rect
    @x={{20}}
    @height={{20}}
    @width={{100}}
    @fill="black"
  />

  <group.Text
    @x={{24}}
    @height={{20}}
    @width={{96}}
    @fill="red"
    @verticalAlign="middle"
    @fontFamily="monospace"
    @text="Frontend development"
    @wrap="none"
    @ellipsis={{true}}
  />
</@layer.Group>
